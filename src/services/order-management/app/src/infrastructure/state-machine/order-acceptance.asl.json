{
    "Comment": "A state machine that manages order acceptance.",
    "StartAt": "Start order acceptance",
    "States": {
        "Start order acceptance": {
            "Type": "Task",
            "Resource": "${StartOrderAcceptanceFunctionArn}",
            "Next": "Check Stock"
        },
        "Check Stock": {
            "Type": "Task",
            "Resource": "${StockCheckerFunctionArn}",
            "Next": "Process Payment",
            "Retry": [
                {
                    "ErrorEquals": [
                        "States.TaskFailed"
                    ],
                    "IntervalSeconds": 2,
                    "MaxAttempts": 3,
                    "BackoffRate": 1
                }
            ]
        },
        "Process Payment": {
            "Type": "Task",
            "Resource": "${PaymentProcessorFunctionArn}",
            "Retry": [
                {
                    "ErrorEquals": [
                        "States.TaskFailed"
                    ],
                    "IntervalSeconds": 2,
                    "MaxAttempts": 3,
                    "BackoffRate": 1
                }
            ],
            "Next": "Order Acceptance Result"
        },
        "Order Acceptance Result": {
            "Type": "Task",
            "Resource": "${OrderAcceptanceResultFunctionArn}",
            "End": true
        }
    }
}